generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  passwordHash String
  role         String   @default("rep") // admin, manager, rep
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  deals        Deal[]
  commissions  Commission[]
  plan         CommissionPlan? @relation(fields: [planId], references: [id])
  planId       String?
  quotaTargets QuotaTarget[]
}

model CommissionPlan {
  id          String   @id @default(cuid())
  name        String
  description String   @default("")
  // Plan type: "flat_rate" | "tiered" | "accelerator"
  planType    String   @default("flat_rate")
  ote         Float    @default(0) // On-Target Earnings (annual)
  baseSalary  Float    @default(0) // Base salary component
  quotaAmount Float    @default(0) // Default quota for this plan
  payFrequency String  @default("monthly") // monthly, quarterly
  hasRamp     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tiers       PlanTier[]
  rampSchedule RampPeriod[]
  users       User[]
  commissions Commission[]
}

model PlanTier {
  id         String @id @default(cuid())
  planId     String
  plan       CommissionPlan @relation(fields: [planId], references: [id], onDelete: Cascade)
  minAmount  Float  @default(0)
  maxAmount  Float? // null = unlimited
  rate       Float  // percentage as decimal e.g. 0.10 = 10%
  orderIndex Int    @default(0)
}

model RampPeriod {
  id         String @id @default(cuid())
  planId     String
  plan       CommissionPlan @relation(fields: [planId], references: [id], onDelete: Cascade)
  month      Int    // month number (1, 2, 3, etc.)
  quotaPct   Float  // quota percentage during ramp e.g. 0.50 = 50%
  commissionPct Float // commission percentage during ramp e.g. 1.0 = 100%
}

model Deal {
  id          String   @id @default(cuid())
  name        String
  amount      Float
  status      String   @default("open") // open, closed_won, closed_lost
  closeDate   DateTime?
  repId       String
  rep         User     @relation(fields: [repId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  commissions Commission[]
}

model Commission {
  id        String   @id @default(cuid())
  amount    Float
  status    String   @default("pending") // pending, approved, paid
  period    String   // e.g. "2024-01" for January 2024
  dealId    String
  deal      Deal     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  repId     String
  rep       User     @relation(fields: [repId], references: [id])
  planId    String
  plan      CommissionPlan @relation(fields: [planId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QuotaTarget {
  id           String   @id @default(cuid())
  repId        String
  rep          User     @relation(fields: [repId], references: [id], onDelete: Cascade)
  period       String   // "2024-01" for monthly, "2024-Q1" for quarterly
  periodType   String   @default("monthly") // monthly, quarterly, annual
  targetAmount Float
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([repId, period])
}
